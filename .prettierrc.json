{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": false,
  "singleQuote": true,
  "printWidth": 100,
  "overrides": [
    {
      "files": ["**/*.html", "**/*.yaml", "**/*.yml"],
      "options": {
        "singleQuote": false,
        "printWidth": 119
      }
    },
    {
      "files": ["**/*.js"],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
